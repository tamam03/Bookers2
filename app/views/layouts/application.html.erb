<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/5f2329857c.js" crossorigin="anonymous"></script>
  </head>

  <body>
   <% flash.each do |key, value| %>
   <%= content_tag(:div, value, class: "#{key}") %>
   <% end %>
   <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
     <div class="container">
      <%= link_to root_path, class: "navbar-brand" do %>
      <span>Bookers</span>
      <% end %>
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
      </button>
      <div class = "navbar-collapse collapse" id="navbarNavDropdown">

       <ul class="navbar-nav ml-auto">
       <% if user_signed_in? %>
       <%= link_to user_path(current_user.id), class: "nav-item nav-link text-light" do %><i class="fas fa-home"></i> Home<%end%>
       <%= link_to users_path, class: "nav-item nav-link text-light" do %><i class="fas fa-users"></i> Users<%end%>
       <%= link_to books_path, class: "nav-item nav-link text-light" do %><i class="fas fa-book-open"></i> Books<%end%>
       <%= link_to destroy_user_session_path, method: :delete, class: "nav-item nav-link text-light" do %><i class="fas fa-sign-out-alt"></i> Log out<%end%>

        <% else %>
       <%= link_to root_path, class: "nav-item nav-link text-light" do %><i class="fas fa-home"></i> Home<%end%>
       <%= link_to about_path, class: "nav-item nav-link text-light" do %><i class="fas fa-link"></i> About<%end%>
       <%= link_to new_user_registration_path, class: "nav-item nav-link text-light" do %><i class="fas fa-user-plus"></i> Sign up<%end%>
       <%= link_to new_user_session_path, class: "nav-item nav-link text-light" do %><i class="fas fa-sign-in-alt"></i> Log in<%end%>
       <% end %>
       </ul>
      </div>
     </div>
    </nav>
   </header>

   <main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">
       <div class="col-md-3">
        <div class="col-md-8 offset-md-1">
        </div>
       </div>
      </div>
     </div>
    </div>
    <%= yield %>
   </main>



   <footer>
    <div class ="container mt-5">
      <div class ="row">
        <div class="mx-auto">
        <p> CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
   </footer>
  </body>
</html>



