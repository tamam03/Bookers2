 <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h1>User info</h1>
        <%= form_with model:@user do |f| %>
         <div class="form-group">
          <label for ="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control name" %>
         </div>
         <div class="form-group">
           <label for="inputImage">Image</label>
           <%= f.file_field :image, placeholder: "Introduction", accept: "image/*", class: "form-control-file user_image" %>
         </div>
         <div class="form-group">
            <label for="inputtext">introduction</label>
             <%= f.text_area :introduction, autofocus: true, id:"inputtext", class: "form-control introduction" %>
         </div>
         <div class="form-group">
            <%= f.submit "UpdateUser", class: "btn btn-secondary" %>
            <% end %>
         </div>
     </div>
   </div>
 </div>






