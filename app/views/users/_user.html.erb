
  <div class="col-md-3">
    <h2>User info</h2>
     <% if user.profile_image.attached? %>
     <%= image_tag user.profile_image%>
     <% else %>
     <%= image_tag 'no_image' %>
     <% end %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
     <tr>
       <th>introduction</th>
       <th><%= user.introduction %></th>
     </tr>
    </tbody>
  </table>

  <div class="row">
  <%= link_to edit_user_path(user) , class: "btn btn-outline-secondary btn-block" do %>
  <span class="fas fa-user-cog"></span>
  <% end %>
  </div>

</div>
</div>
</div>
